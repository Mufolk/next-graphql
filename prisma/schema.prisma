generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Novel {
  id String @id @default(uuid())
  title String
  image String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author Author[]
} 

model Author {
  id String @id @default(uuid())
  name String
  image String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Novel Novel? @relation(fields: [novelId], references: [id])
  novelId String?
}